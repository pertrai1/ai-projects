{
  "name": "plants-nlqi",
  "version": "0.1.0",
  "description": "Natural Language Query Interface for USDA PLANTS Database",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "setup:db": "tsx scripts/setup-database.ts",
    "ingest": "tsx scripts/ingest-plants-data.ts",
    "seed": "tsx scripts/seed-data.ts",
    "embeddings": "tsx scripts/create-embeddings.ts"
  },
  "keywords": [
    "plants",
    "usda",
    "rag",
    "llm",
    "nlp",
    "claude",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@langchain/anthropic": "^0.3.9",
    "@langchain/community": "^0.3.16",
    "@langchain/core": "^0.3.23",
    "@langchain/pinecone": "^0.1.3",
    "@pinecone-database/pinecone": "^5.0.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "zod": "^3.24.1",
    "winston": "^3.17.0",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
