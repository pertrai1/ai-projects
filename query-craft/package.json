{
  "name": "query-craft",
  "version": "0.1.0",
  "description": "Natural language to SQL query generator",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "querycraft": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js",
    "link": "npm run build && npm link",
    "create:db": "tsx scripts/create-sample-db.ts",
    "eval": "tsx evals/run-evals.ts",
    "test:schema": "tsx src/tests/schema-loader.ts",
    "test:generator": "tsx src/tests/query-generator.ts",
    "test:validator": "tsx src/tests/sql-validator.ts",
    "test:workflow": "tsx src/tests/workflow.ts",
    "test:executor": "tsx src/tests/query-executor.ts",
    "test:retriever": "tsx src/tests/schema-doc-retriever.ts",
    "test:all": "npm run test:schema && npm run test:generator && npm run test:validator && npm run test:workflow && npm run test:retriever",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "nl2sql",
    "natural-language",
    "sql",
    "query-generation"
  ],
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "better-sqlite3": "^12.5.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "ora": "^8.0.1",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autoevals": "^0.0.70",
    "braintrust": "^0.0.130",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
