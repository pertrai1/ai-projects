{
  "name": "red-turn-probe-agent",
  "version": "0.2.0",
  "description": "A red-teaming probe agent for eliciting multi-turn conversational failures in large language models through template-based adaptive strategies",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "redturn": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js static",
    "start:adaptive": "node dist/index.js adaptive",
    "redturn": "node dist/index.js",
    "test": "npm run test:rubric",
    "test:rubric": "npm run build && node dist/validate-rubric.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "multi-turn conversation",
    "LLM evaluation",
    "red-teaming",
    "adversarial testing",
    "conversational AI",
    "LLM safety",
    "probe agent",
    "behavioral testing",
    "AI evaluation"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "openai": "^6.15.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
